! The edit pulldown entry and the associated pulldown menu.
                                                                              
object
    edit_menu : XmPulldownMenu {
        controls {
            XmPushButton        ESourceMenuButton;
            XmCascadeButton     EOElementMenuButton;  
            XmSeparator         {};      
            XmPushButton        EGeometryButton;           
            XmPushButton        EParameterButton;
	    XmPushButton        EParameterInitButton;
            XmPushButton        EOptiButton; 
            XmPushButton        EBLButton; 
            };
        callbacks {
            MrmNcreateCallback  = procedure create_proc (kEditMenu);
            XmNhelpCallback     = procedure sens_help_proc(k_edit_help); 
            };
        };

