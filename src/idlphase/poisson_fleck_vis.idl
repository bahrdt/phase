    window,6, RETAIN=2, XSIZE=wx, YSIZE=wy ,XPOS=screenx-2*wx,YPOS=screeny-4*wy 
    plot, z_vec*1e3 ,ap[*,sizea/2];; ,xrange=[-0.1,0.1]
    oplot, z_vec*1e3 ,propamp2[*,sizek/2] ,color=2

