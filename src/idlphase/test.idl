;
fname0     ='/afs/psi.ch/project/phase/data/SwissFEL.out.dfl.h5'
stat       = dblarr(7)

h5_read, fname0, z_vec=z_vec, y_vec=y_vec, wavelength=wavelength, zcomp=field

  bamp   = abs(field)
  bz     = z_vec
  by     = y_vec
  window,1, RETAIN=2, XSIZE=wx, YSIZE=wy ,XPOS=screenx-wx,YPOS=screeny-1*wy 
  mycontour, bamp  ,z_vec*1e3,y_vec*1e3, xtitle='z (mm) ', ytitle='y (mm)', title='Source (amp)  ',xrange=[-0.03,0.03] ,yrange=[-0.03,0.03];


resize, z_vec=z_vec, y_vec=y_vec,field=field, Nzero = 300, Ninter = 6

  iamp   =abs(field)

  window,2, RETAIN=2, XSIZE=wx, YSIZE=wy ,XPOS=screenx-wx,YPOS=screeny-2*wy 
  mycontour, iamp  ,z_vec*1e3,y_vec*1e3, xtitle='z (mm) ', ytitle='y (mm)', title='Source (amp)  ',xrange=[-0.03,0.03] ,yrange=[-0.03,0.03];

  window,3, RETAIN=2

  sb = size(bamp)
  plot, bz, bamp[*,sb[2]/2], psym=4
  
  si = size(iamp)
  oplot, z_vec, iamp[*,si[2]/2+1], color=2
