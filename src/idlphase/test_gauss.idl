drift      = 20
;
; Parameters for XFEL-beam 
;
gaussbeam, dist=sourcedist, Nz=Nz,sizez=0.0002, z_vec=z_vec, y_vec=y_vec, bcomp=bcomp , w0=27.7e-6 , wavelength=wavelength
  window,0, RETAIN=2, XSIZE=500, YSIZE=400,XPOS=1400, YPOS=770
  bamp = abs(bcomp)
;  emf_statistics, bamp, y_vec=y_vec, z_vec=z_vec
  mycontour, bamp,z_vec,y_vec, xtitle='z (mm)', ytitle='y (mm)', title='gaussbeam (amplitude)'


 if (sourcedist ne 0) then  window,1, RETAIN=2, XSIZE=500, YSIZE=400, XPOS=900, YPOS=770
 if (sourcedist ne 0) then  bamp = atan(bcomp,/phase)
 if (sourcedist ne 0) then  mycontour, bamp,z_vec,y_vec, xtitle='z (mm)', ytitle='y (mm)', title='gaussbeam (phase)'

driftnear , drift=drift, z_vec=z_vec, y_vec=y_vec, acomp=bcomp,$
           wavelength=wavelength, bcomp=prop, plot=1
           
propamp=abs(prop)
propphase = atan(prop,/phase)

 window,2, RETAIN=2 , XSIZE=500, YSIZE=400,XPOS=1400, YPOS=330
 mycontour, propamp,z_vec,y_vec, xtitle='z (mm)', ytitle='y (mm)', title='propagate (amp)'

 window,3, RETAIN=2, XSIZE=500, YSIZE=400,XPOS=900, YPOS=330
 mycontour, propphase,z_vec,y_vec, xtitle='z (mm)', ytitle='y (mm)', title='propagate (phase)'


driftnear , drift=-1*drift , z_vec=z_vec, y_vec=y_vec, acomp=prop, wavelength=wavelength, bcomp=back
 backamp=abs(back)
